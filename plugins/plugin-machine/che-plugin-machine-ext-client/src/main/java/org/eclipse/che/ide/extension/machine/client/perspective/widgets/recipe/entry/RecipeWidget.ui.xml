<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            width: 100%;
            height: 20px;
            padding: 1px;
            border: 1px solid #000;
            cursor: pointer;
        }

        .main:hover {
            background: #4d7191;
        }

        .main:active {
            opacity: 0.7;
        }

        .image {
            width: 15px;
            height: 15px;
            float: left;
            margin-top: 4px;
            margin-left: 4px;
        }

        .image svg {
            width: 15px;
            height: 15px;
            fill: #e7e7e7;
        }

        .label {
            float: left;
            margin-top: 2px;
            margin-left: 6px;
        }
    </ui:style>

    <g:FlowPanel ui:field="main" addStyleNames="{style.main}">

        <g:SimpleLayoutPanel ui:field="image" addStyleNames="{style.image}"/>
        <g:Label ui:field="name" addStyleNames="{style.label}"/>

    </g:FlowPanel>

</ui:UiBinder>
